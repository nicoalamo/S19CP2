<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Photo:</strong>
  <%=  %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%= @task.photo %>" alt="<%= @task.name %>">
  <div class="card-body">
    <h5 class="card-title"> <%= @task.name %></h5>
    <p class="card-text"><%= @task.description %></p>
    <td><%= link_to 'Editar', edit_task_path(@task), class: "btn btn-warning text-white" %></td>
    <td><%= link_to 'Back', tasks_path, class: "btn btn-danger text-white"  %></td>
  </div>
</div>



<% ranking = 0 %>

<div class="row">
  <% @users.limit(5).each do |user| %>
    <div class="col">
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= user.photo %>" alt="<%= user.name %>">
          <div class="card-body">
            <h5 class="card-title"> <%= user.name %></h5>
            <p class="card-text">Ranking: <%= ranking += 1 %></p>
          </div>
        </div>
    </div>
  <% end %>
</div>

<% new_ranking = 0 %>

<div class="row">
  <div class="col-md-4">

    <table class="table">
      <thead>
        <tr>
          <th scope="col">Ranking</th>
          <th scope="col">Nombre</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= new_ranking += 1 %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>
